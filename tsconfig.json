{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true, 
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "rootDirs": ["src", "__tests__"],
    "resolveJsonModule": true,
    "strict": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "paths": {
      "@/tests/*": ["./__tests__/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "__tests__", "./**.ts", "test", "prisma/prisma.service.ts"]
}
